<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape >
            <gradient
                android:startColor="#504F4F"
                android:endColor="#292929"
                android:angle="270" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="10dp"
                android:top="10dp" android:right="10dp"
                android:bottom="10dp" />
            <stroke
                android:color="#919190"
                android:width="1dp"/>
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#B4F3EEEE"
                android:endColor="#CBCAC9C9"
                android:angle="270" />
            <stroke
                android:width="1px"
                android:color="#919190" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="10dp"
                android:top="10dp" android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>