    <!-- ***********        Input text box        *********** -->

    <style name="inputBoxDark" parent="@style/Widget.Design.TextInputLayout">
        <item name="android:background">@drawable/boarder_dark</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/othersTextColorDark</item> <!--#717171-->
        <item name="android:textSize">25sp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">10dp</item>

    </style>
    <style name="inputBoxLight" parent="@style/Widget.Design.TextInputLayout">
        <item name="android:background">@drawable/boarder_light</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/othersTextColorLight</item> <!--#2E2E2E-->
        <item name="android:textSize">25sp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">10dp</item>

    </style>

    <!--CHECKBOX-->
    <style name="checkBoxDark" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/othersTextColorDark</item>
        <item name="android:textSize">40dp</item>
    </style>

    <!-- ***********        Listnumber         *********** -->

    <style name="listNumberDark" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/othersTextColorDark</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="listNumberLight" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/othersTextColorLight</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- ***********        Radiobutton        *********** -->

    <style name="radioButtonDark" parent="@style/Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/othersTextColorDark</item>
        <item name="android:textSize">25dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:paddingLeft">10dp</item>
    </style>
    <style name="radioButtonLight" parent="@style/Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/othersTextColorLight</item>
        <item name="android:textSize">25dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <!-- ***********        Spinner         *********** -->

    <style name="spinnerDark" parent="@style/Widget.AppCompat.Spinner.DropDown">
        <item name="android:textColor">@color/othersTextColorDark</item>
        <item name="android:textSize">40dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:background">@drawable/ic_spinner_down_dark</item>
        <item name="android:popupBackground">@drawable/spinner_dropdown_dark</item>

    </style>
    <style name="spinnerLight" parent="@style/Widget.AppCompat.Spinner.DropDown">
        <item name="android:textColor">@color/othersTextColorLight</item>
        <item name="android:textSize">40dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:background">@drawable/ic_spinner_down_light</item>
        <item name="android:popupBackground">@drawable/spinner_dropdown_light</item>


    </style>




</resources>
