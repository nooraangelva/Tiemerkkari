<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Dark application theme. -->
    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="background_color">@drawable/gradient_backround</item>
        <item name="android:textColor">@color/buttonTextColorDark</item>
        <item name="round_button">@drawable/round_button</item>
        <item name="toolbar">@color/toolbarDark</item>

    </style>


    <!-- Light application theme. -->
    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryLight</item>
        <item name="background_color">@drawable/gradient_background_light</item>
        <item name="android:textColor">@color/buttonTextColorLight</item>
        <item name="round_button">@drawable/round_button_light</item>
        <item name="toolbar">@color/toolbarLight</item>


    </style>

    <!--Buttoneittein tyylit -->
    <style name="Buttons" parent="Theme.AppCompat.DayNight.NoActionBar"><!--"Theme.AppCompat.Light.NoActionBar"-->

        <!--<item name="android:background">#486581</item>-->
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:layout_width">@dimen/button_layout_width</item>
        <item name="android:layout_height">@dimen/button_layout_height</item>
        <item name="android:paddingStart">@dimen/button_padding</item>
        <item name="android:paddingEnd">@dimen/button_padding</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_margin</item>
        <item name="android:elevation">5dp</item>

    </style>

    <!--tekstien tyyli-->
    <style name="textstyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#96B9CA</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/roboto</item>

    </style>
</resources>
