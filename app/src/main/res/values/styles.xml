<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ***********        Theme         *********** -->

    <style name="DarkTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowBackground">@drawable/bg_darks</item>
        <item name="android:navigationBarColor"
            tools:targetApi="lollipop">@color/navigationColorPrimary</item>
        <item name="android:textViewStyle">@style/listNumberDark</item>
        <item name="radioButtonStyle">@style/radioButtonDark</item>
        <item name="colorControlActivated">@color/buttonTextColorDark</item>
        <item name="colorControlNormal">@color/textColorDark</item>
        <item name="editTextStyle">@style/inputBoxDark</item>
        <item name="cardViewStyle">@style/CardViewDark</item>
        <item name="materialButtonStyle">@style/ButtonsDark</item>
        <item name="toolbarStyle">@style/CustomToolBarStyleDark</item>
        <item name="spinnerStyle">@style/spinnerDark</item>
        <item name="android:textColorHint">@color/hintTextColor</item>
        <item name="checkboxStyle">@style/checkBoxDark</item>
    </style>

    <style name="LightTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryLight</item>
        <item name="colorPrimary">@color/colorPrimaryL</item>
        <item name="android:windowBackground">@drawable/bg_lightblues</item>
        <item name="android:navigationBarColor"
            tools:targetApi="lollipop">@color/navigationColorPrimaryL</item>
        <item name="android:textViewStyle">@style/listNumberLight</item>
        <item name="radioButtonStyle">@style/radioButtonLight</item>
        <item name="colorControlActivated">@color/buttonTextColorLight</item>
        <item name="colorControlNormal">@color/textColorLight</item>
        <item name="editTextStyle">@style/inputBoxLight</item>
        <item name="cardViewStyle">@style/CardViewLight</item>
        <item name="materialButtonStyle">@style/ButtonsLight</item>
        <item name="toolbarStyle">@style/CustomToolBarStyleLight</item>
        <item name="spinnerStyle">@style/spinnerLight</item>
        <item name="android:textColorHint">@color/hintTextColor</item>
    </style>

    <!-- ***********        Buttons         *********** -->

    <style name="ButtonsDark" parent="android:Widget.Material.Button">
        <item name="android:textColor">@color/buttonTextColorDark</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:layout_width">@dimen/button_layout_width</item>
        <item name="android:layout_height">@dimen/button_layout_height</item>
        <item name="android:paddingStart">@dimen/button_padding</item>
        <item name="android:paddingEnd">@dimen/button_padding</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_margin</item>
        <item name="android:background">@drawable/round_button</item>

    </style>
    <style name="ButtonsLight" parent="android:Widget.Material.Button">
        <item name="android:textColor">@color/buttonTextColorLight</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:layout_width">@dimen/button_layout_width</item>
        <item name="android:layout_height">@dimen/button_layout_height</item>
        <item name="android:paddingStart">@dimen/button_padding</item>
        <item name="android:paddingEnd">@dimen/button_padding</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_margin</item>
        <item name="android:background">@drawable/round_button_light</item>
    </style>

    <!-- ***********        Cardview        *********** -->

    <style name="CardViewDark" parent="CardView">
        <item name="cardBackgroundColor">#17F6F602</item>
    </style>
    <style name="CardViewLight" parent="CardView">
        <item name="cardBackgroundColor">#5B5B71C1</item>
    </style>

    <!-- ***********        Toolbar         *********** -->

    <style name="CustomToolBarStyleDark" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">#F8E326</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>
    <style name="CustomToolBarStyleLight" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">#2E2E2E</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

