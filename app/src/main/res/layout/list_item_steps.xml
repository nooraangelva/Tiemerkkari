<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="steps"
            type="com.example.android.navigation.database.Instructions" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/movementInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            app:signName="@{step}"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="43dp" />


        <EditText
            android:id="@+id/xMovementInput"
            android:layout_width="180dp"
            android:layout_height="27dp"
            android:layout_marginTop="132dp"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintTop_toTopOf="parent"
            app:signName="@{step}"
            tools:layout_editor_absoluteX="56dp" />

        <CheckedTextView
            android:id="@+id/xDirectionChecked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CheckedTextView"
            app:signName="@{step}"
            tools:layout_editor_absoluteX="297dp"
            tools:layout_editor_absoluteY="70dp" />


        <EditText
            android:id="@+id/yMovementInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            app:signName="@{step}"
            tools:layout_editor_absoluteX="279dp"
            tools:layout_editor_absoluteY="132dp" />

        <CheckedTextView
            android:id="@+id/yDirectionChecked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CheckedTextView"
            app:signName="@{step}"
            tools:layout_editor_absoluteX="439dp"
            tools:layout_editor_absoluteY="70dp" />

        <CheckedTextView
            android:id="@+id/paintChecked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CheckedTextView"
            app:signName="@{step}"
            tools:layout_editor_absoluteX="439dp"
            tools:layout_editor_absoluteY="70dp" />


        <Button
            android:id="@+id/newStepbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            tools:layout_editor_absoluteX="627dp"
            tools:layout_editor_absoluteY="84dp" />

        <TextView
            android:id="@+id/stepNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            tools:layout_editor_absoluteX="112dp"
            tools:layout_editor_absoluteY="217dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>