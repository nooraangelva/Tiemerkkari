<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.android.navigation.screens.guide.GuideFragment">



        <TextView
            android:id="@+id/rulesText"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/question_horizontal_margin"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/question_horizontal_margin"
            android:text="@string/GuideText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/guideText2"

            android:layout_width="900dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="168dp"
            android:text="ohje 2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.873"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/guideText1"

            android:layout_width="900dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="88dp"
            android:text="ohje 1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.873"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/Ohje1"
            android:layout_width="300dp"
            android:layout_height="@dimen/button_layout_height"
            android:text="Start"
            app:elevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="76dp" />

        <Button
            android:id="@+id/importLayoutButton"
            android:layout_width="300dp"
            android:layout_height="@dimen/button_layout_height"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:text="Import"
            app:layout_constraintBottom_toTopOf="@+id/guideButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Ohje1"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/guideButton"
            android:layout_width="300dp"
            android:layout_height="@dimen/button_layout_height"
            android:layout_marginBottom="628dp"
            android:text="Day/night and En/fi"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

</layout>
