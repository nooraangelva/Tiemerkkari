<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.android.navigation.ImportFragment">

    <data>
        <variable
            name="viewModel"
            type="com.example.android.navigation.screens.imports.ImportViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/importConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <EditText
            android:id="@+id/newSignNameInput"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="39dp"
            android:layout_marginBottom="560dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:text="Sign name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/newSignImageImportButton"
            app:layout_constraintTop_toTopOf="parent" />
        <!--android:text="@={viewModel.signName}"-->

        <!--android:text="@={viewModel.signInfo}"-->

        <EditText
            android:id="@+id/newSignInfoInput"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:text="Info, measurements..."
            app:layout_constraintStart_toEndOf="@+id/newSignImageImportButton"
            app:layout_constraintTop_toBottomOf="@+id/newSignNameInput" />
            <!-- android:background="@drawable/boarder_dark"-->
        <Button
            android:id="@+id/newSignImageImportButton"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="40dp"
            android:text="Get Image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/createSignButtonImport"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="32dp"
            android:onClick="@{() ->  viewModel.createSign()}"
            android:text="Create"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/newStepButton"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="145dp"
            android:layout_marginBottom="32dp"
            android:onClick="@{() ->  viewModel.newStep()}"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="+"
            android:textSize="35dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/importButton"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/import_recycle_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="start"
            android:layout_marginTop="236dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/importButton"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="40dp"
            android:onClick="@{() ->  viewModel.saveSteps()}"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Save steps"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/cancelButtonImport"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="40dp"
            android:onClick="@{() ->  viewModel.delete()}"
            android:text="Cancel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!--android:checked="@={viewModel.speedArea}"-->

        <CheckBox
            android:id="@+id/speedAreaImport"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_marginTop="40dp"
            android:text="Over 50km/h"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="769dp" />

        <Spinner
            android:id="@+id/typeInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.554"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="41dp" />

        <!--android:text="@={viewModel.type}"-->




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
