<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.android.navigation.ImportFragment">

    <data>
        <variable
            name="viewModel"
            type="com.example.android.navigation.screens.imports.ImportViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/importConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <EditText
            android:id="@+id/newSignNameInput"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="560dp"
            android:ems="10"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="@string/sign_name"
            android:inputType="text"
            android:text="@={viewModel.signName}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/newSignImageImportButton"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/newSignInfoInput"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/info_measurements"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:layout_constraintStart_toEndOf="@+id/newSignImageImportButton"
            android:text="@={viewModel.signInfo}"
            app:layout_constraintTop_toBottomOf="@+id/newSignNameInput" />

        <Button
            android:id="@+id/newSignImageImportButton"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="40dp"
            android:text="Get Image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/createSignButtonImport"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="32dp"
            android:text="Create"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/newStepButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="125dp"
            android:layout_marginBottom="24dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="@string/newStepButtonString"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/importButton"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/import_recycle_view"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_gravity="start"
            android:layout_marginTop="240dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/importButton"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="24dp"

            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/save_steps"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/cancelButtonImport"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="24dp"
            android:text="Cancel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!--android:checked="@={viewModel.speedArea}"-->

        <CheckBox
            android:id="@+id/speedAreaImport"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="40dp"
            android:checked="@={viewModel.speedArea}"
            android:scaleX="1.50"
            android:scaleY="1.50"
            android:text="@string/over_50km_hCheckBoxString"
            android:textSize="15dp"
            app:layout_constraintEnd_toStartOf="@+id/createSignButtonImport"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/typeInput"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="42dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintStart_toEndOf="@+id/newSignNameInput"
            app:layout_constraintTop_toTopOf="parent"
            tools:setOnItemSelectedListener="@{viewModel.clicksListener}" />

        <!--android:text="@={viewModel.type}"-->

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
